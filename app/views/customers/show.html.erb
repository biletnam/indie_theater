<div class="content group">
	<h1>My Account</h1>
	
	<%= button_to "Update Account Info", edit_customer_url, :method => "get" %><br>
	
	<h2>Shopping Cart</h2>
	
	<ul>
		<% @cart_items.each do |item| %>
			<li><%= "#{item.quantity} tickets - #{item.showtime.movie.title} - #{item.showtime.time.strftime('%A, %b %d at %l:%M %p')}" %>
				<%= button_to "Place Order", orders_url(@order, :quantity => item.quantity, :showtime_id => item.showtime.id, :cart_item_id => item.id) %></li>
		<% end %>
	</ul><br>
	
	<h2>My Orders</h2>
	
	<ul>
		<% @orders.each do |order| %>
			<li><%= link_to order.created_at.strftime('%B, %b %d'), order_url(order) %></li>
		<% end %>
	</ul>
</div>