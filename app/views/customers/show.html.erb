<div class="content group">
	<h1 class="my-account">My Account</h1><%= link_to "Update My Information", edit_customer_url, :method => "get", :class => "update-info" %><hr>
	
	<div>
		<h2 class="cart">Shopping Cart</h2>
		<ul>
			<% @cart_items.each do |item| %>
				<li class="item"><%= "#{item.quantity} tickets - #{item.showtime.movie.title} - #{item.showtime.time.strftime('%A, %b %d at %l:%M %p')}" %>
					<%= button_to "Place Order", orders_url(@order, :quantity => item.quantity, :showtime_id => item.showtime.id, :cart_item_id => item.id) %></li>
			<% end %>
		</ul>
	</div><hr>
	
	<h2 class="orders">Orders</h2>
	
	<ul>
		<% @orders.each do |order| %>
			<li class="order"><%= link_to order.created_at.strftime('%B %d at %l:%M %p'), order_url(order) %></li>
		<% end %>
	</ul>
</div>