<div class="content group">
	<h1 class="main-header">My Account</h1>
	<div class="back-to-main"><%= link_to "Back to Main", customer_url(current_customer) %></div>
	
	<%= form_for(@customer) do |f| %>
	
	<div class="customer-field"><%= f.label :email %>
	<%= f.text_field :email %></div>
	
	<div class="customer-field"><%= f.label :password, "New Password" %>
	<%= f.password_field :password %></div>
	
	<div class="customer-field"><%= f.label :password_confirmation, "New Password Confirmation" %>
	<%= f.password_field :password_confirmation %></div>
		
	<%= f.submit %>
	
	<% end %>

</div>