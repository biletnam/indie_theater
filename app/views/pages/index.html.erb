<div class="content group">
  <section class="content-sidebar">
  
    <div class="profile-picture">
      <a href="#">
				<%= image_tag "logo_example.png" %>
      </a>
    </div>
  
    <div class="profile-info">
      <h2>Indie Theater</h2>
      <p>
        0 Infinite Loop<br>
				Brooklyn, NY 11111<br>
        <strong>Phone</strong> (555) 555-5555
				<% if admin_signed_in? %>
					<ul>
						<li><%= link_to "Sign Out", destroy_admin_session_url, :method => "delete" %></li>
						<li><%= link_to "Add Movie", new_movie_url %></li>
						<li><%= link_to "Edit Movies", movies_url %></li>
						<% if current_admin.super %>
							<li><%= link_to "Create Admin", new_admin_url %></li>
							<li><%= link_to "All Admins", admins_url %></li>
						<% end %>
						
					</ul>
				<% elsif customer_signed_in? %>
				<ul>
					<li><%= link_to "My Account", customer_url(current_customer) %></li>
				</ul>
				<% end %>
      </p>
    </div>

  </section>
  <section class="content-main">
  
    <header class="content-header">
      <h1>Film. Experienced.</h1>
    </header>
  
    <div class="posts" id="carousel">
			<ul>
				<li><a href="#"><%= image_tag "now_you_see_me.jpg" %></a></li>
			</ul>			
    </div>
  
  </section>
</div>
